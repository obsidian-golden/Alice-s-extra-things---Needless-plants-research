<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
      <operations>
        <!-- all diferent plants -->

        <!-- rice -->
        <li Class="PatchOperationSequence">
          <operations>
            <li Class="PatchOperationTest">
              <xpath>Defs/ThingDef[defName="Plant_Rice"]/plant/sowResearchPrerequisites</xpath>
              <success>Invert</success>
            </li>

            <li Class="PatchOperationAdd">
              <xpath>Defs/ThingDef[defName="Plant_Rice"]/plant</xpath>
              <value>
                <sowResearchPrerequisites />
              </value>
            </li>

            <li Class="PatchOperationAdd">
              <xpath>Defs/ThingDef[defName="Plant_Rice"]/plant/sowResearchPrerequisites</xpath>
              <value>
                <li>PLRBasic</li>
              </value>
            </li>
          </operations>
        </li>
        <!-- hay -->
        <li Class="PatchOperationSequence">
          <operations>
          <li Class="PatchOperationTest">
            <xpath>Defs/ThingDef[defName="Plant_Haygrass"]/plant/sowResearchPrerequisites</xpath>
            <success>Invert</success>
          </li>

          <li Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="Plant_Haygrass"]/plant</xpath>
            <value>
              <sowResearchPrerequisites />
            </value>
          </li>

          <li Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="Plant_Haygrass"]/plant/sowResearchPrerequisites</xpath>
            <value>
              <li>PLRFeed</li>
            </value>
          </li>
        </operations>
      </li>
        <!-- corn -->
        <li Class="PatchOperationSequence">
          <operations>
            <li Class="PatchOperationTest">
              <xpath>Defs/ThingDef[defName="Plant_Corn"]/plant/sowResearchPrerequisites</xpath>
              <success>Invert</success>
            </li>

            <li Class="PatchOperationAdd">
              <xpath>Defs/ThingDef[defName="Plant_Corn"]/plant</xpath>
              <value>
                <sowResearchPrerequisites />
              </value>
            </li>

            <li Class="PatchOperationAdd">
              <xpath>Defs/ThingDef[defName="Plant_Corn"]/plant/sowResearchPrerequisites</xpath>
              <value>
                <li>PLRSlow</li>
              </value>
            </li>
          </operations>
        </li>

        <!-- cotton -->
        <li Class="PatchOperationSequence">
          <operations>
            <li Class="PatchOperationTest">
              <xpath>Defs/ThingDef[defName="Plant_Cotton"]/plant/sowResearchPrerequisites</xpath>
              <success>Invert</success>
            </li>

            <li Class="PatchOperationAdd">
              <xpath>Defs/ThingDef[defName="Plant_Cotton"]/plant</xpath>
              <value>
                <sowResearchPrerequisites />
              </value>
            </li>

            <li Class="PatchOperationAdd">
              <xpath>Defs/ThingDef[defName="Plant_Cotton"]/plant/sowResearchPrerequisites</xpath>
              <value>
                <li>PLRTextiles</li>
              </value>
            </li>
          </operations>
        </li>

      </operations>
  </Operation>
</Patch>
