<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
      <operations>
        <!-- all diferent plants -->

        <!-- VPEMore avocado -->
        <li Class="PatchOperationSequence">
          <operations>
            <li Class="PatchOperationTest">
              <xpath>Defs/ThingDef[defName="VCE_TreeAvocado"]/plant/sowResearchPrerequisites</xpath>
              <success>Invert</success>
            </li>

            <li Class="PatchOperationAdd">
              <xpath>Defs/ThingDef[defName="VCE_TreeAvocado"]/plant</xpath>
              <value>
                <sowResearchPrerequisites />
              </value>
            </li>
          </operations>
        </li>

        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="VCE_TreeAvocado"]/plant/sowResearchPrerequisites</xpath>
          <value>
            <li>PLRFruitTrees</li>
            <li>PLRSlow</li>
          </value>
        </li>

