    <success>Always</success>
      <operations>
        <!-- all diferent plants -->

        <!-- VPE grass and tall grass -->
        <li Class="PatchOperationSequence">
          <operations>
            <li Class="PatchOperationTest">
              <xpath>Defs/ThingDef[defName="VCE_Grass" or defName="VCE_TallGrass"]/plant/sowResearchPrerequisites</xpath>
              <success>Invert</success>
            </li>

            <li Class="PatchOperationAdd">
              <xpath>Defs/ThingDef[defName="VCE_Grass" or defName="VCE_TallGrass"]/plant</xpath>
              <value>
                <sowResearchPrerequisites />
              </value>
            </li>
          </operations>
        </li>

        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="VCE_Grass" or defName="VCE_TallGrass"]/plant/sowResearchPrerequisites</xpath>
